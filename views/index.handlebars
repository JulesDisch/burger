<div id="main-container" class="container">
  <section class="main-section">
    <h1>Portfolio</h1>
    <hr>
    <div id="game">
      <div id="extra">

        <h2>Eat da burgers!</h2>
        <div class="row">
          <div class="column-1">
            <h3>Available burgers</h3>
            <ul>
              {{#each burgers}}
              {{#unless devoured}}
              {{> burgers/burger-block devour=true}}
              {{/unless}}
              {{/each}}
            </ul>
          </div>

          <div class="column-2">
            <h3>Make a burger</h3>
            <form class="create-form">
              <div class="form-group">
                <label for="burger">Burger Name:</label>
                <input type="text" id="burger" name="burger_name">
              </div>
              <button type="submit">Make burger</button>
            </form>
          </div>

          <div class="column-3">
            <h3>Devoured burgers!</h3>
            <ul>
              {{#each burgers}}
              {{#if devoured}}
              {{> burgers/burger-block devour=false}}
              {{/if}}
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
    </div>
        <a href="https://github.com/JulesDisch/burger">Find on GitHub</a>
  </section>
</div>
